package ejemploHilos;

public class Primo extends Thread {
	
	private int numero;
	
	public Primo(int numero) {
		this.numero = numero;
	}
	/** Método que muestra si el numero que ha introducido el usuario por pantalla, 
	 *	y mostrará si es primo o no. 
	 */
	public synchronized void run() {
		boolean primo = true;
	    
	    if (this.numero != 2 && this.numero%2==0) {
	    	primo = false;
	    } else {
		    //Si no comprobamos 
		    for(int i=3;i<this.numero;i++) {
		        if(this.numero%i==0) {}
		        	primo = false;
	    }

	    }
	    if (primo) {
	    	System.out.println("El numero "+this.numero+" es Primo");
	    } else {
	    	System.out.println("El numero "+this.numero+" NO es Primo");
	    }

	}
}
